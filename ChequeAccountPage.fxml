<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- Ensure the fx:controller path is correct for your project -->
<AnchorPane prefHeight="413.0" prefWidth="600.0" style="-fx-background-color: #11366D;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankingsystem.ChequeAccountPageController">

    <children>
        <!-- Page Title -->
        <Label layoutX="115.0" layoutY="24.0" text="Cheque Account Page" textFill="#fdf7f7">
            <font>
                <Font name="System Bold Italic" size="36.0" />
            </font>
        </Label>

        <!-- Current Balance Static Label (Moved to layoutX="40.0") -->
        <Label layoutX="40.0" layoutY="102.0" prefHeight="39.0" prefWidth="139.0" text="Current Balance:" textFill="#ebe7e7">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Balance Value Label (Moved to layoutX="180.0") -->
        <Label fx:id="balanceValueLabel" layoutX="180.0" layoutY="102.0" prefHeight="39.0" prefWidth="100.0" text="0.00" textFill="#00FF00">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Overdraft Limit Label (Moved to layoutX="40.0") -->
        <Label layoutX="40.0" layoutY="130.0" prefHeight="39.0" prefWidth="139.0" text="Overdraft Limit:" textFill="#ebe7e7">
            <font>
                <Font name="System Bold Italic" size="14.0" />
            </font>
        </Label>

        <!-- Overdraft Limit Value Label (Moved to layoutX="180.0") -->
        <Label fx:id="overdraftLimitLabel" layoutX="180.0" layoutY="130.0" prefHeight="39.0" prefWidth="100.0" text="0.00" textFill="#FFD700">
            <font>
                <Font name="System Bold Italic" size="14.0" />
            </font>
        </Label>
        <!-- End of Balance/Limit Labels -->


        <!-- Transaction/Status Area (Starts at layoutX="350.0") -->
        <TextArea fx:id="chequeTextArea" layoutX="350.0" layoutY="77.0" prefHeight="181.0" prefWidth="236.0" />

        <!-- Action Buttons (Adjusted slightly for alignment with new labels) -->
        <Button fx:id="withdrawButton" layoutX="40.0" layoutY="178.0" mnemonicParsing="false" onAction="#handleWithdraw" prefHeight="39.0" prefWidth="139.0" text="Withdraw">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="depositButton" layoutX="40.0" layoutY="238.0" mnemonicParsing="false" onAction="#handleDeposit" prefHeight="39.0" prefWidth="139.0" text="Deposit">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="transferFundsButton" layoutX="40.0" layoutY="296.0" mnemonicParsing="false" onAction="#handleTransferFunds" prefHeight="39.0" prefWidth="139.0" text="Transfer Funds">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="viewTransactionButton" layoutX="40.0" layoutY="358.0" mnemonicParsing="false" onAction="#handleViewTransaction" prefHeight="39.0" prefWidth="139.0" text="View Transaction">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="exitButton" layoutX="423.0" layoutY="358.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="39.0" prefWidth="139.0" text="Exit">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
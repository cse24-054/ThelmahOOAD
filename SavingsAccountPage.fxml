<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="413.0" prefWidth="600.0" style="-fx-background-color: #11366D;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankingsystem.SavingsAccountController">

    <children>
        <!-- Page Title -->
        <Label layoutX="115.0" layoutY="24.0" text="Savings Account Page" textFill="#fdf7f7">
            <font>
                <Font name="System Bold Italic" size="36.0" />
            </font>
        </Label>

        <!-- Current Balance Static Label -->
        <Label layoutX="40.0" layoutY="102.0" prefHeight="39.0" prefWidth="139.0" text="Current Balance:" textFill="#ebe7e7">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Dynamic Label for the Balance Value (FIXED POSITION) -->
        <!-- layoutX changed from 230.0 to 175.0 to sit right next to the static label and avoid the TextArea overlap. -->
        <Label fx:id="balanceValueLabel" layoutX="175.0" layoutY="102.0" prefHeight="39.0" prefWidth="100.0" text="0.00" textFill="#00FF00">
            <font>
                <Font name="System Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Transaction/Status Area -->
        <TextArea fx:id="savingsTextArea" layoutX="260.0" layoutY="77.0" prefHeight="181.0" prefWidth="326.0" />

        <!-- Action Buttons -->
        <Button fx:id="withdrawButton" layoutX="78.0" layoutY="158.0" mnemonicParsing="false" onAction="#handleWithdraw" prefHeight="39.0" prefWidth="139.0" text="Withdraw">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="depositButton" layoutX="78.0" layoutY="218.0" mnemonicParsing="false" onAction="#handleDeposit" prefHeight="39.0" prefWidth="139.0" text="Deposit">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="transferFundsButton" layoutX="78.0" layoutY="276.0" mnemonicParsing="false" onAction="#handleTransferFunds" prefHeight="39.0" prefWidth="139.0" text="Transfer Funds">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="viewTransactionButton" layoutX="78.0" layoutY="338.0" mnemonicParsing="false" onAction="#handleViewTransaction" prefHeight="39.0" prefWidth="139.0" text="View Transaction">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>

        <Button fx:id="exitButton" layoutX="423.0" layoutY="338.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="39.0" prefWidth="139.0" text="Exit">
            <font>
                <Font name="System Bold Italic" size="13.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
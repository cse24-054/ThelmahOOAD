<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="650.0"
            style="-fx-background-color: #f0f4f8;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.AccountsPageController">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">

        <Label text="Customer Accounts" textFill="#11366D">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Label text="View and update your personal information, and access account details." textFill="#555555" />

        <!-- Personal Information Section -->
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="Personal Information" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #11366D;" />

            <GridPane hgap="15" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="nameField" prefWidth="300" promptText="First Name" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="surnameField" promptText="Last Name" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;" />
                <TextField fx:id="addressField" promptText="Street, City, Zip" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </GridPane>
        </VBox>

        <!-- com.bankingsystem.Account Navigation Section -->
        <VBox spacing="10" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <Label text="My Accounts" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #11366D;" />

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="savingsButton" text="Savings"
                        onAction="#handleSavingsAccountPage"
                        style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14pt; -fx-background-radius: 8;"
                        prefWidth="150" prefHeight="45" />

                <Button fx:id="chequeButton" text="Cheque"
                        onAction="#handleChequeAccountPage"
                        style="-fx-background-color: #4299e1; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14pt; -fx-background-radius: 8;"
                        prefWidth="150" prefHeight="45" />

                <Button fx:id="investmentButton" text="Investment"
                        onAction="#handleInvestmentAccountPage"
                        style="-fx-background-color: #f6ad55; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14pt; -fx-background-radius: 8;"
                        prefWidth="150" prefHeight="45" />
            </HBox>
        </VBox>

        <!-- Back Button -->
        <Button text="â† Back to Main Menu"
                onAction="#handleBackToMenu"
                prefHeight="40.0" prefWidth="250.0"
                style="-fx-background-color: #718096; -fx-text-fill: white; -fx-font-size: 14pt; -fx-background-radius: 8;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>

    </VBox>
</AnchorPane>
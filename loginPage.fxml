<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="450.0"
            style="-fx-background-color: #11366D;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankingsystem.LoginPageController">

    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label text="KATHETRO BANK" textFill="#f8f1f1">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>

        <Label text=" Were your banking is Safest" textFill="#f8f1f1">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- Login Form Container -->
        <VBox alignment="CENTER" spacing="15" prefWidth="300" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

            <!-- Username Input -->
            <Label text="Username" textFill="#11366D" style="-fx-font-weight: bold;" alignment="CENTER_LEFT" prefWidth="300" />
            <TextField fx:id="usernameField" promptText="Enter username (use 'user')" prefHeight="40" />

            <!-- Password Input -->
            <Label text="Password" textFill="#11366D" style="-fx-font-weight: bold;" alignment="CENTER_LEFT" prefWidth="300" />
            <PasswordField fx:id="passwordField" promptText="Enter password (use 'pass')" prefHeight="40" />

            <!-- Login Button -->
            <Button fx:id="loginButton" text="LOGIN"
                    onAction="#handlelogin"
                    prefHeight="50" prefWidth="300"
                    style="-fx-background-color: #38a169; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18pt; -fx-background-radius: 8;">
                <VBox.margin>
                    <Insets top="15.0" />
                </VBox.margin>
            </Button>

            <!-- Message Label -->
            <Label fx:id="messageLabel" textFill="#e53e3e" wrapText="true" minHeight="20.0">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Label>
        </VBox>

    </VBox>
</AnchorPane>